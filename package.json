{
  "name": "@pabloadoue/role-acl",
  "version": "4.5.4",
  "description": "Role, Attribute and Condition based Access Control for Node.js",
  "main": "./index.js",
  "directories": {
    "lib": "./lib",
    "test": "./test"
  },
  "files": [
    "index.js",
    "lib",
    "LICENSE"
  ],
  "types": "./lib/src/index.d.ts",
  "scripts": {
    "build": "rimraf ./lib && mkdirp ./lib && tsc",
    "prepare": "npm run build",
    "test": "ts-node ./node_modules/jasmine/bin/jasmine.js JASMINE_CONFIG_PATH=jasmine.json",
    "test:coverage": "npm run build && c8 --all --src lib/src --exclude '**/*.d.ts' --exclude 'lib/test/**' --exclude 'lib/src/**/I*.js' --exclude 'lib/src/**/index.js' --exclude 'lib/src/core/AccessControlError.js' --reporter=text-summary --check-coverage --lines 100 --functions 100 --branches 100 --statements 100 node ./node_modules/jasmine/bin/jasmine.js JASMINE_CONFIG_PATH=jasmine.build.json --random=false",
    "webpack": "webpack",
    "prepublishOnly": "npm test && npm run build",
    "preversion": "npm test",
    "version": "npm run build && git add -A lib",
    "postversion": "git push && git push --tags",
    "release": "release-it",
    "release:dry": "release-it --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pabloadoue/role-acl.git"
  },
  "keywords": [
    "access",
    "access-control",
    "role",
    "attribute",
    "grant",
    "allow",
    "condition",
    "permission",
    "action",
    "rbac",
    "abac",
    "resource",
    "express",
    "admin",
    "user",
    "acl",
    "glob",
    "wildcard"
  ],
  "author": "Pablo Adoue Peralta <pablo.adoue@me.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pabloadoue/role-acl/issues"
  },
  "homepage": "https://github.com/pabloadoue/role-acl#readme",
  "devDependencies": {
    "@types/jasmine": "^6.0.0",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/node": "^25.3.0",
    "c8": "^10.1.3",
    "handlebars": "^4.7.8",
    "jasmine": "^6.0.0",
    "js-yaml": "^4.1.1",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "ncp": "^2.0.0",
    "release-it": "^19.0.5",
    "rimraf": "^6.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.105.2"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}",
      "push": true,
      "requireCleanWorkingDir": true,
      "requireBranch": "main"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": false
    }
  },
  "dependencies": {
    "jsonpath-plus": "^10.4.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.flattendeep": "^4.4.0",
    "matcher": "^6.0.0",
    "notation": "^2.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  }
}
